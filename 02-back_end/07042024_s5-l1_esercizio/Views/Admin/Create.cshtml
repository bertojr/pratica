@model _07042024_s5_l1_esercizio.Models.Cliente

@{
    ViewData["Title"] = "Admin";
}

<form asp-action="CheckAzienda">
    <label asp-for="IsAzienda">Privato</label>
    <input type="checkbox" asp-for="IsAzienda" value="true" checked onchange="this.form.submit()"></input>
    <label asp-for="IsAzienda">Azienda</label>
    <input type="checkbox" asp-for="IsAzienda" value="false" onchange="this.form.submit()"></input>
</form>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    @if (Model.IsAzienda)
    {
        <div class="form-group">
            <label asp-for="PartitaIVA" class="control-label"></label>
            <input asp-for="PartitaIVA" class="form-control" />
        </div>
    }
    else
    {
       <div class="form-group">
        <label asp-for="CF" class="control-label"></label>
        <input asp-for="CF" class="form-control" />
       </div> 
    }
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
   


